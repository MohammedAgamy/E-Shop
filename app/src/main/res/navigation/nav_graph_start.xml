<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_start"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.e_shop.ui.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_getStartFragment"
            app:destination="@id/getStartFragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim"/>
    </fragment>
    <fragment
        android:id="@+id/getStartFragment"
        android:name="com.example.e_shop.ui.fragment.GetStartFragment"
        android:label="fragment_get_start"
        tools:layout="@layout/fragment_get_start" />
